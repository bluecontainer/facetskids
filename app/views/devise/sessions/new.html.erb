<% content_for :head do %>
  <style>
    body {
      background-color: #27b7eb;
    }
  </style>
<% end %>

<div class="row" style="padding-top: 180px">
  <div class="offset4 span4">
    <div class="login-form">
<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-vertical' }) do |f| %>

      <%= f.input :email, :autofocus => true, :label => false, :placeholder => "Email", input_html: { class: "login-field"} %>

      <%= f.input :password, :label => false, :placeholder => "Password", input_html: { class: "login-field" } %>

      <%= f.button :submit, "Login", :class => "btn btn-primary btn-lg btn-block" %>
<% end %>

<%= render "devise/shared/links" %>

    </div>
  </div>
</div>

