
<div class="row" style="padding-top: 180px">
  <div class="offset4 span4">
    <div class="login-form">

<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :email, :autofocus => true, :label => false, :placeholder => "Email", input_html: { class: "login-field"} %>

  <%= f.button :submit, "Send reset password email", :class => "btn btn-primary btn-lg btn-block" %>

<% end %>

<%= render "devise/shared/links" %>

    </div>
  </div>
</div>


