<% content_for :head do %>
  <style>
    body {
      background-color: #27b7eb;
    }
  </style>
<% end %>


<div class="row" style="padding-top: 180px">
  <div class="offset4 span4">
    <div class="login-form">

<h4>Change your password</h4>

<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, :as => :hidden %>
  <%= f.full_error :reset_password_token %>

  <%= f.input :password, :label => "New password", :required => true, :autofocus => true, input_html: { class: "login-field"} %>
  <%= f.input :password_confirmation, :label => "Confirm your new password", :required => true, input_html: { class: "login-field"} %>

  <%= f.button :submit, "Change my password", :class => "btn btn-primary btn-lg btn-block" %>
<% end %>

<%= render "devise/shared/links" %>

    </div>
  </div>
</div>


