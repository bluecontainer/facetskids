- @videos.in_groups_of(3, false) do |group|
  - group.each do |video|
    .grid-04
      .video
        = link_to video_path(video) do
          = image_tag video.thumbnails[0], class: "shadow picture", size: "288x162"
          %h1.name= truncate video.name, length: 30
          %p.description= truncate video.description, length: 100
  .clear
